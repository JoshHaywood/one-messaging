<div class="chatbox">
    <!-- Heading -->
    <div class="chatbox-heading">
        <a href="/"><img class="logo-iconIMG" alt="logo" src="../Images/favicon-noBG.png"></a> <!-- Logo image -->

        <h2>Chatroom {{room}}</h2>

        <a id="leave" href="/"><button>Leave Room</button></a> <!-- ID for leave JS event -->
    </div>

    <div class="container"> <!-- So that the output message and sidebar will be in a row -->
        <!-- Sidebar -->
        <div class="chatbox-sidebar">
            <!-- Hamburger -->
            <a class="sidebar-toggle" onclick="ToggleSideMenu()">
                <span class="bar"></span> 
                <span class="bar"></span> 
                <span class="bar"></span>
            </a>

            <div class="menu-items"> <!-- To be used as the collapse toggle element -->
                <!-- Rooms -->
                <div class="container"> <!-- Containers used to align SVGS and header -->
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><!--! Font Awesome Pro 6.0.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. -->
